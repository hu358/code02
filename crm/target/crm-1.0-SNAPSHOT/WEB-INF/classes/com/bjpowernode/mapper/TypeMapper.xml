<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.mapper.TypeMapper">
  	<select id="getAll" resultType="com.bjpowernode.beans.Type">
        select * from tbl_dictionary_type
    </select>
    <select id="getById" resultType="com.bjpowernode.beans.Type">
        select * from tbl_dictionary_type where code=#{code}
    </select>
    
    <insert id="save">
        insert into tbl_dictionary_type values (#{code},#{name},#{description})
    </insert>
    
    <update id="edit">
        update tbl_dictionary_type set name=#{name},description=#{description}
        where code=#{code}
    </update>

    <delete id="delete">
        delete from tbl_dictionary_type where code in
        <foreach collection="array" item="code" open="(" close=")" separator=",">
            #{code}
        </foreach>
    </delete>
</mapper>